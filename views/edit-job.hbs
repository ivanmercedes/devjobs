<main class="container">
    <form action="/vacantes/editar/{{job.url}}" method="post" class="default-form">
        <h3>Informacion General</h3>

        <div class="campo">
            <label for="title">Titulo</label>
            <input type="text" name="title" placeholder="Ej: React Developer" requried value="{{job.title}}">
        </div>
        <div class="campo">
            <label for="company">Empresa</label>
            <input type="text" name="company" placeholder="Empresa" requried value="{{job.company}}">
        </div>
        <div class="campo">
            <label for="location">Ubicacion</label>
            <input type="text" name="location" placeholder="Ej: Santo Domingo" requried value="{{job.location}}">
        </div>
        <div class="campo">
            <label for="salary">Salario (USD)</label>
            <input type="text" name="salary" placeholder="Ej: 500 usd" requried value="{{job.salary}}">
        </div>
        <div class="campo">
            <label for="contract">Contracto</label>
            {{#typeContract job.contract}}
            <select name="contract" id="contract">
                <option value="" disabled selected>-- Selecciona --</option>
                <option value="freelance">Freelance</option>
                <option value="fulltime">Tiempo Completo</option>
                <option value="halftime">Medio Tiempo</option>
                <option value="proyect">Por Proyecto</option>
            </select>
            {{/typeContract}}
        </div>

        <h3>Descripcion del position</h3>

        <div class="campo descripcion">
            <label for="">Descripcion</label>
            <input type="hidden" id="x" name="description" value="{{{job.description}}}">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
             {{#selectSkills job.skills}}
             {{/selectSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publica" class="btn btn-blue">
        </div>
    </form>
</main>