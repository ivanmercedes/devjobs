          {{else}}
            <a href="/iniciar-sesion">Login</a>
            <a href="/crear-cuenta">Registrarme</a>
          {{/if}}
        </div>

      </div>
    </div>

    

    <div class="contenido-principal">
      {{#if messages}}
        <div class="alertas">
          {{#showAlerts messages}}{{/showAlerts}}
        </div>
      {{/if}}
      {{{body}}}
    </div>

    <script src="/js/trix.js"></script>
    <script src="/dist//bundle.js"></script>
  </body>
</html>